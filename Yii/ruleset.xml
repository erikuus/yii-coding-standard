<?xml version="1.0"?>
<ruleset name="Yii">
	<description>The Yii Framework coding standard. You can use it for 1.X.X or 2.X.X version of framework.</description>

	<!-- We need this for PHPCS 3.x. -->
	<autoload>./PHPCSAliases.php</autoload>

	<!-- We don't need to use this code standarts for views. -->
	<exclude-pattern>*/views/*</exclude-pattern>

	<!-- Include Generic sniffs -->
	<rule ref="Generic.PHP.CharacterBeforePHPOpeningTag"/>
	<rule ref="Generic.PHP.DisallowShortOpenTag"/>
	<rule ref="Generic.NamingConventions.ConstructorName"/>
	<rule ref="Generic.NamingConventions.UpperCaseConstantName"/>
	<rule ref="Generic.NamingConventions.CamelCapsFunctionName"/>
	<rule ref="Generic.Functions.OpeningFunctionBraceBsdAllman"/>
	<rule ref="Generic.WhiteSpace.DisallowSpaceIndent"/>

	<!-- Include PEAR sniffs -->
	<!-- Private functions must start with an underscore. -->
	<!-- Private members must start with an underscore. -->
	<rule ref="PEAR.NamingConventions.ValidFunctionName"/>
	<rule ref="PEAR.NamingConventions.ValidVariableName"/>

	<!-- Include PSR2 sniffs -->
	<!-- There are no else if statements (elseif should be used instead) -->
	<rule ref="PSR2.ControlStructures.ElseIfDeclaration"/>

	<!-- Include Squiz sniffs -->
	<!-- File name matches class name -->
	<!-- Class name is in StudlyCaps format -->
	<rule ref="Squiz.Classes.ClassFileName"/>
	<rule ref="Squiz.Classes.ValidClassName">
		<exclude-pattern>*/migrations/*</exclude-pattern>
	</rule>
	<!-- Change messages -->
	<rule ref="Squiz.Classes.ValidClassName.NotCamelCaps">
		<message>%s name "%s" is not in StudlyCaps format</message>
	</rule>
</ruleset>
